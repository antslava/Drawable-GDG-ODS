<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:columnCount="3"
            app:rowCount="3"
            app:useDefaultMargins="true">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/example_bitmap_right_top" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/example_bitmap_center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/example_bitmap_fill_horizontal" />

            <View
                android:layout_width="160dp"
                android:layout_height="64dp"
                android:background="@drawable/example_bitmap_tile_mirror_mode"
                app:layout_columnSpan="3" />

            <View
                android:layout_width="160dp"
                android:layout_height="64dp"
                android:background="@drawable/example_bitmap_tile_repeat_mode"
                app:layout_columnSpan="3" />

        </android.support.v7.widget.GridLayout>

    </FrameLayout>
</LinearLayout>