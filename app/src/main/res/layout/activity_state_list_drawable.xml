<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activity.StateListDrawableActivity">

    <include layout="@layout/toolbar_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_default_normal_holo_light"
            android:text="Normal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Views.Margin"
            android:background="@drawable/btn_default_pressed_holo_light"
            android:text="Pressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Views.Margin"
            android:background="@drawable/btn_default_focused_holo_light"
            android:text="Focused" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Views.Margin"
            android:background="@drawable/btn_default_disabled_holo_light"
            android:enabled="false"
            android:text="Disabled" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Views.Margin"
            android:background="@drawable/btn_default_disabled_focused_holo_light"
            android:enabled="false"
            android:text="Disabled &amp; focused" />

    </LinearLayout>

</LinearLayout>